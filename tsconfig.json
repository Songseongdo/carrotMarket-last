{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"src/**/*.{ts,tsx}",
		"tailwind.config.js",
		"util/**/*.{ts,tsx}",
		"lib/**/*.{ts,tsx}"
	],
	"exclude": ["node_modules"]
}
